
# Azure deployment flag
AZURE_DEPLOYMENT=false

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/yourdb
# For Azure PostgreSQL, use format:
# DATABASE_URL=postgresql://username@servername:password@servername.postgres.database.azure.com:5432/dbname

# JWT Secret
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API Key (for LangChain)
OPENAI_API_KEY=your-openai-api-key

# Optional Azure specific settings
ROOT_PATH=
